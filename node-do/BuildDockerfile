FROM ubuntu
LABEL Description="todo app build environment"

RUN apt update && apt upgrade --yes && \
    apt update && apt install --yes\
        build-essential \
        gcc\
        make \
        clang\
        cmake\
        wget \
        curl \
        gdb\
        vim\
        nmap \
        sudo \
        vim \
        bash

ARG USERNAME=builder
ARG USER_UID=1000
ARG USER_GID=$USER_UID

# Create the user
RUN groupadd --gid $USER_GID $USERNAME \
    && useradd --uid $USER_UID --gid $USER_GID -m $USERNAME \
    && echo $USERNAME ALL=\(root\) NOPASSWD:ALL > /etc/sudoers.d/$USERNAME \
    && chmod 0440 /etc/sudoers.d/$USERNAME

# [Optional] Set the default user. Omit if you want to keep the default as root.
USER $USERNAME
WORKDIR $HOME

ENV HOME /home/$USERNAME


# Set the default shell to bash for subsequent RUN instructions
SHELL ["/bin/bash", "-c"]

# Install nvm as the specified user
RUN curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash \
    && touch $HOME/.bashrc \
    && echo 'export NVM_DIR="$HOME/.nvm"' >> $HOME/.bashrc \
    && echo '[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"' >> $HOME/.bashrc \
    && echo '[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"' >> $HOME/.bashrc

RUN . $HOME/.nvm/nvm.sh && \
    nvm install node && \
    nvm use node && \
    nvm alias default node



# If you want to use nvm or node in subsequent RUN commands, ensure you source nvm.sh before doing so, like this:
RUN . $HOME/.nvm/nvm.sh && nvm use default && node -v && cd $WORKDIR && npm run start







